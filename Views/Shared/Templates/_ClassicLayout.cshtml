@{
    Layout = null;
    var title = ViewBag.Title as string ?? "الموقع الحكومي";
}
<!doctype html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/templates/classic.css" rel="stylesheet">
</head>
<body class="classic-body">
  <header class="classic-header shadow-sm">
    <div class="container d-flex align-items-center justify-content-between py-3">
      <div class="d-flex align-items-center gap-2">
        <img src="@ViewBag.AgencyLogo" alt="Logo" class="logo">
        <strong>@ViewBag.AgencyName</strong>
      </div>
      <nav class="nav gap-3">
        <a class="nav-link" href="/">الرئيسية</a>
        <a class="nav-link" href="/@ViewBag.AgencySlug/news">الأخبار</a>
        <a class="nav-link" href="/@ViewBag.AgencySlug/contact">التواصل</a>
      </nav>
    </div>
  </header>

  <main class="container py-4">
    @RenderBody()
  </main>

  <footer class="classic-footer mt-5">
    <div class="container py-4 text-muted small">
      © @DateTime.UtcNow.Year - @ViewBag.AgencyName
    </div>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
