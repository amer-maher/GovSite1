@{
    Layout = null;
    var title = ViewBag.Title as string ?? "Government Portal";
}
<!doctype html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/templates/modern.css" rel="stylesheet">
</head>
<body class="modern-body">
  <section class="hero text-center text-white">
    <div class="container py-5">
      <h1 class="display-5 fw-bold">@ViewBag.AgencyName</h1>
      <p class="lead opacity-75">بوابة خدمات ومعلومات</p>
    </div>
  </section>

  <main class="container py-4">
    @RenderBody()
  </main>

  <footer class="modern-footer text-center text-muted py-4">
    © @DateTime.UtcNow.Year - @ViewBag.AgencyName
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
