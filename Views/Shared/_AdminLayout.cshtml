@{
  Layout = null;
  var title = ViewBag.Title as string ?? "Dashboard";
}
<!doctype html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title - Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/admin/admin.css" rel="stylesheet">
</head>
<body class="bg-body-tertiary">
  <div class="d-flex">
    <aside class="sidebar border-end bg-white">
      <div class="p-3 border-bottom d-flex align-items-center gap-2">
        <i class="bi bi-building-gear fs-4"></i><strong>لوحة التحكم</strong>
      </div>
      <nav class="list-group list-group-flush">
        <a class="list-group-item list-group-item-action" href="/admin"><i class="bi bi-speedometer2 me-2"></i>الرئيسية</a>
        <div class="text-uppercase small text-muted px-3 pt-3">المحتوى</div>
        <a class="list-group-item list-group-item-action" href="/Pages"><i class="bi bi-file-text me-2"></i>الصفحات</a>
      </nav>
    </aside>

    <div class="flex-grow-1 min-vh-100 d-flex flex-column">
      <header class="navbar bg-white border-bottom px-3">
        <div class="ms-auto small text-muted">Admin</div>
      </header>

      <main class="container-fluid px-4 py-4">
        @if (TempData["ToastMsg"] is string t && !string.IsNullOrWhiteSpace(t)) {
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            @t
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        }
        @RenderBody()
      </main>

      <footer class="mt-auto py-3 border-top bg-white px-4 text-muted small">
        <div class="d-flex justify-content-between">
          <span>© @DateTime.UtcNow.Year</span><span>v1.0</span>
        </div>
      </footer>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <script src="/admin/admin.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
