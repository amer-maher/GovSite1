@model GovSite.Models.Agency
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "تعديل جهة";
}
<div class="card">
  <div class="card-body">
    <form asp-action="Edit" method="post">
      <input type="hidden" asp-for="Id" />
      <div class="mb-3">
        <label class="form-label">الاسم</label>
        <input asp-for="Name" class="form-control"/>
      </div>
      <div class="mb-3">
        <label class="form-label">Slug</label>
        <input asp-for="Slug" class="form-control"/>
      </div>
      <div class="mb-3">
        <label class="form-label">اختيار القالب</label>
        <select asp-for="TemplateId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Templates, "Id", "Name"))"></select>
      </div>
      <button class="btn btn-primary">حفظ التغييرات</button>
    </form>
  </div>
</div>
